<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Car arrêtés | Aps{% endblock %}</title>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('fontAwe/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker3.standalone.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar sticky-top navbar-dark bg-dark justify-content-between">
            <a class="navbar-brand" href="{{ path('consultation') }}">Autocars APS | FLE</a>
            <ul class="nav">
                {% if app.user %}
                    <a class="nav-link active" href="{{ path('add_rubrique') }}">Rubrique</a>
                {% endif %}
              <a class="nav-link active" href="{{ path('index') }}">Ajouter un Autocar</a>
              <a class="nav-link active" href="{{ path('consultation') }}">Etat Parc</a>
              <a class="nav-link active" href="{{ path('liste_panne') }}">Car en panne</a>
              <a class="nav-link" href="{{ path('recherche') }}">Recherche</a>
                {% if app.user %}
                    <a class="nav-link" href="{{ logout_path('main') }}">Se déconnecter</a>
                {% else %}
              <a class="nav-link" href="#" data-toggle="modal" data-target="#exampleModalLong">Se connecter</a>
                {% endif %}
            </ul>
        </nav>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Se connecter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                  {#{% if error is defined %}
                      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                  {% endif %}

                  <form action="{{ path('login') }}" method="post">
                      <label for="username">Username:</label>
                      <input type="text" id="username" name="_username" value="{{ last_username }}" />

                      <label for="password">Password:</label>
                      <input type="password" id="password" name="_password" />

                    {#
                        If you want to control the URL the user
                          is redirected to on success (more details below)
                          <input type="hidden" name="_target_path" value="/account" />

                      <button type="submit">login</button>
                  </form>#}
                  {% if is_granted('ROLE_USER') %}
                  {% else %}
                  <div class="container">
                      <div class="row">

                          {% if error %}
                              <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                          {% endif %}
                          <form class="form-horizontal" action="{{ path('login') }}" method="post">

                              <label class="control-label" for="username">Nom d'utilisateur:</label>
                              <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />

                              <label class="control-label" for="password">Mot de passe:</label>
                              <input type="password" class="form-control" id="password" name="_password" />

                              {# <input type="checkbox" id="remember_me" name="_remember_me" checked />
                               <label for="remember_me">Se souvenir de moi</label>

                             {#
                                   If you want to control the URL the user
                                   is redirected to on success (more details below)
                                   <input type="hidden" name="_target_path" value="/account" />
                               #}

                              <button class="btn btn-primary" type="submit">Se connecter</button>
                          </form>
                      </div>
                  </div>
                  {% endif %}
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}
            <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
            {#<srcipt src="{{ asset('locales/bootstrap-datepicker.fr.min.js') }}"></srcipt>#}
            <script src="{{ asset('js/bootstrap-datepicker.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
