{% extends 'base.html.twig' %}

{%  block body %}
    <section>
        <div class="container">
            <h3 class="text-center">S'enregistrer</h3>
            <div class="well">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {{ form_errors(form) }}

                <div class="col-md-12 col-sm-10">

                    <div class="form-row">
                        {# Génération du label. #}
                        <div class="form-group col-md-6">
                            {{ form_label(form.username, "Nom d'utilisateur : ", {'label_attr': {'class': ' control-label'}}) }}
                            {# Génération de l'input.#}

                            {{ form_widget(form.username, {'attr': {'class': ' form-control'}}) }}
                            {{ form_errors(form.username, { 'attr': {'class': 'red' }}) }}
                        </div>
                        <div class="form-group col-md-6">
                            {# Génération du label. #}
                            {{ form_label(form.email, "Email : ", {'label_attr': {'class': ' control-label'}}) }}
                            {# Génération de l'input.#}
                            {{ form_widget(form.email, {'attr': {'class': ' form-control'}}) }}
                            {{ form_errors(form.email, { 'attr': {'class': 'red' }}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {# Génération du label. #}
                            {{ form_label(form.plainPassword.first, "Mot de passe : ", {'label_attr': {'class': ' control-label'}}) }}
                            {# Génération de l'input.#}
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.plainPassword.first, { 'attr': {'class': 'red' }}) }}
                        </div>
                        <div class="form-group col-md-6">
                            {# Génération du label. #}
                            {{ form_label(form.plainPassword.second, "Confirmation du mot de passe : ", {'label_attr': {'class': ' control-label'}}) }}
                            {# Génération de l'input.#}
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.plainPassword.second, { 'attr': {'class': 'red' }}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <button type="submit" class="col-lg-12 btn btn-primary">S'inscrire</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}