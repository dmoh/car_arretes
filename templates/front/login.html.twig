{% extends 'base.html.twig' %}

{%  block body %}
    <section>
        <div class="head_login">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="text-center pb-40 pt-30">Formulaire de connexion</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form_bg">
                        <form class="" action="{{ path('login') }}" method="post">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label class="control-label" for="username">Nom d'utilisateur ou email :</label>
                                    <input type="text" class="form-control " id="username" name="_username" value="" autocomplete="off" />
                                    <br>
                                    <label class="control-label" for="password">Mot de passe:</label>
                                    <input type="password" class="form-control" id="password" name="_password" />

                                    <input type="checkbox"  id="remember_me" name="_remember_me" checked />
                                    <label for="remember_me">  Se souvenir de moi</label>
                                    <br>
                                    {% if error %}
                                        <div style="font-size: 15px; color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                     {#   If you want to control the URL the user
                                        is redirected to on success (more details below)
                                        <input type="hidden" name="_target_path" value="/account" />
                                    #}
                                    <button class="btn btn-primary" type="submit">Se connecter</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
           $('input#remember_me').css('visibility', 'visible');
        });
    </script>
{% endblock %}